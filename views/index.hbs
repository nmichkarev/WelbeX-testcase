<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="index.js"></script>
    <style>
      .post {
        background-color: #e3f5ef;
        margin-bottom: 10px;
        padding: 15px
      }
      .post img {
        max-width: 300px;
        max-height: 200px;
      }
      .button {
        background-color: #c2aeed;
        border-radius: 5px;
        padding: 3px;
        box-shadow: black;
        margin-bottom: 3px;
        cursor: pointer;
        display: inline-block;
      }
    </style>
  </head>
  <body>

    <div id="login-page" style="display: none;">
      <div class="flex justify-center">
        <div class="w-full max-w-xs mt-10">
          <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
              <label for="login" class="block text-gray-700 text-sm font-bold mb-2">Логин</label>
              <input type="text" id="login-field" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-6">
              <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Пароль</label>
              <input type="password" id="password-field" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="flex items-center justify-between">
              <div class="button" id="button-login">Войти</div>
              <div class="button" id="button-reg">Зарегистрироваться</div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div id="list-page" style="display: none;" class="p-8">
      <div id="list-page-create-button" class="inline-block button">Создать</div>
      <div id="list-page-logout" class="inline-block float-right button">Выйти</div>
      <ul id="list-page-posts" class="mt-6">
      </ul>
    </div>

    <div id="create-page" style="display: none;" class="p-8">
      <div class="mb-10">
        <div id="create-page-back" class="button">К списку</div>
      </div>
      <textarea class="border-solid border-black p-3" id="post-content" cols="100" rows="10"></textarea>
      <div class="mt-8">
        <input class="hidden" id="fileupload" type="file" name="fileupload" />
        <div id="create-page-media-button" class="button">Добавить медиа</div>
        <div id="create-page-save-button" class="button">Сохранить</div>
      </div>
    </div>

    <div id="update-page" style="display: none;" class="p-8">
      <div class="mb-10">
        <div id="update-page-back" class="button">К списку</div>
      </div>
      <textarea class="border-solid border-black p-3" id="post-content-update" cols="100" rows="10"></textarea>
      <div class="mt-8">
        <input class="hidden" id="fileuploadupdate" type="file" name="fileuploadupdate" />
        <div id="update-page-media-button" class="button">Добавить медиа</div>
        <div id="update-page-save-button" class="button">Сохранить</div>
      </div>
    </div>
  </body>
</html>